#include<stdio.h>
#include<stdlib.h>
#include<time.h>
#include<conio.h>
void print1()
{
	system("cls");
	for(a=0;a<15;puts(""),a++)
		for(b=0;b<15;b++){
			if(A[a][b]==0) printf("  ");
			else if(A[a][b]==9) printf("O ");
			else if(A[a][b]==4) printf("@ ");
			else if(A[a][b]==2) printf("$ ");
			else if(A[a][b]==1) printf("+ ");
			else printf("%d ",A[a][b]);}
}
void print2()
{
	system("cls");
	for(a=0;a<15;puts(""),a++)
		for(b=0;b<15;b++){
			if(B[a][b]==0) printf("  ");
			else if(B[a][b]==9) printf("O ");
			else if(B[a][b]==4) printf("@ ");
			else if(B[a][b]==2) printf("$ ");
			else if(B[a][b]==1) printf("+ ");
			else printf("%d ",B[a][b]);}
}
int main()
{
/*	for(a=0;a<15;a++)
		for(b=0;b<15;b++)
			scanf("%d",&A[a][b]);*/
	srand(time(NULL));
	q=rand()%2+1;
	A[x][y]=4;
	switch(q)
	{
		case 1:
			print1();
			while(1)
			{
				o=getch();
				switch(o)
				{
					case 224:
						o=getch();
						switch(o)
						{
							case 72:
								if(A[x-1][y]!=1){
									if(A[x-1][y]==2){
										A[x][y]=9;
										x--;
										A[x][y]=4;
										p++;}
									else if(A[x-1][y]!=1||A[x-1][y]!=2){
										A[x][y]=9;
										x--;}}
								break;
							case 75:
								if(A[x][y-1]!=1){
									if(A[x][y-1]==2){
										A[x][y]=9;
										y--;
										A[x][y]=4;
										p++;}
									else if(A[x][y-1]!=1||A[x][y-1]!=2){
										A[x][y]=9;
										y--;}}
								break;
							case 77:
								if(A[x][y+1]!=1){
									if(A[x][y+1]==2){
										A[x][y]=9;
										y++;
										A[x][y]=4;
										p++;}
									else if(A[x][y+1]!=1||A[x][y+1]!=2){
										A[x][y]=9;
										y++;}}
								break;
							case 80:
								if(A[x+1][y]!=1){
									if(A[x+1][y]==2){
										A[x][y]=9;
										x++;
										A[x][y]=4;
										p++;}
									else if(A[x+1][y]!=1||A[x+1][y]!=2){
										A[x][y]=9;
										x++;}}
								break;
							default:
								break;
						}
					default:
						break;
				}
				A[x][y]=4;
				print1();
				printf("\n\n");
				if(p==1) break;
			}
			print1();
			printf("\n\nyou win!");
		case 2:
			print2();
			while(1)
			{
				o=getch();
				switch(o)
				{
					case 224:
						o=getch();
						switch(o)
						{
							case 72:
								if(B[x-1][y]!=1){
									if(B[x-1][y]==2){
										B[x][y]=9;
										x--;
										B[x][y]=4;
										p++;}
									else if(B[x-1][y]!=1||B[x-1][y]!=2){
										B[x][y]=9;
										x--;}}
								break;
							case 75:
								if(B[x][y-1]!=1){
									if(B[x][y-1]==2){
										B[x][y]=9;
										y--;
										B[x][y]=4;
										p++;}
									else if(B[x][y-1]!=1||B[x][y-1]!=2){
										B[x][y]=9;
										y--;}}
								break;
							case 77:
								if(B[x][y+1]!=1){
									if(B[x][y+1]==2){
										B[x][y]=9;
										y++;
										B[x][y]=4;
										p++;}
									else if(B[x][y+1]!=1||B[x][y+1]!=2){
										B[x][y]=9;
										y++;}}
								break;
							case 80:
								if(B[x+1][y]!=1){
									if(B[x+1][y]==2){
										B[x][y]=9;
										x++;
										B[x][y]=4;
										p++;}
									else if(B[x+1][y]!=1||B[x+1][y]!=2){
										B[x][y]=9;
										x++;}}
								break;
							default:
								break;
						}
					default:
						break;
				}
				B[x][y]=4;
